{
	"name": "wissenschafts-sucher",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"engines": {
		"node": "16.14.2",
		"npm": "8.17.0"
	},
	"scripts": {
		"prisma:dev:deploy": "npx prisma migrate deploy",
		"db:dev:rm": "docker compose rm dev-db -s -f -v",
		"db:dev:up": "docker compose up dev-db -d",
		"db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && npm run prisma:dev:deploy",
		"prebuild": "rimraf dist",
		"build": "npm --prefix frontend install && NODE_ENV=production npm --prefix frontend run build && npm install && NODE_ENV=production nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"heroku-postbuild": "nest build && npm run format && npm run start:prod"
	},
	"dependencies": {
		"@nestjs/common": "^9.0.8",
		"@nestjs/config": "^2.2.0",
		"@nestjs/core": "^9.0.8",
		"@nestjs/jwt": "^9.0.0",
		"@nestjs/passport": "^9.0.0",
		"@nestjs/platform-express": "^9.0.8",
		"@nestjs/serve-static": "^3.0.0",
		"@prisma/client": "^3.13.0",
		"argon2": "^0.28.5",
		"busboy": "^1.6.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"mongoose": "^6.3.0",
		"nestjs": "^0.0.1",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^9.0.8",
		"@types/express": "^4.17.13",
		"@types/jest": "27.4.1",
		"@types/node": "^16.0.0",
		"@types/passport-jwt": "^3.0.6",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"dotenv-cli": "^5.1.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.2.5",
		"prettier": "^2.3.2",
		"prisma": "^3.13.0",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
